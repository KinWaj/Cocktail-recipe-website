
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
              integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2"
              crossorigin="anonymous">


</head>
<body>
{% block navigation %}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container px-4 px-lg-5">
        <a class="navbar-brand" href="/">DRINKIT</a>

        <form class="navbar-nav d-flex">
            {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item"><a class="nav-link active" aria-current="page" href="/admin">Admin Panel </a></li>
                <div class="text-center"> <a class="btn btn-outline-dark mt-auto" href="{{ path('app_logout') }}">Log out</a></div>

            {% elseif is_granted('ROLE_USER')%}
                <li class="nav-item"><a class="nav-link active" aria-current="page" href="/favourites">Favourites <span class="badge bg-dark text-white ms-1 rounded-pill">0</span></a></li>
                <div class="text-center"> <a class="btn btn-outline-dark mt-auto" href="{{ path('app_logout') }}">Log out</a></div>
            {% else %}
            <div class="text-center"> <a href="/login" class="btn btn-outline-dark mt-auto"  >Log in</a></div>
            {% endif %}
        </form>

    </div>
    </div>
</nav>
{% endblock %}
<title>
{% block title %}{% endblock %}
</title>
{% block header %}{% endblock %}
